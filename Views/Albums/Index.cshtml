@model IEnumerable<DigiMarketWebApp.Models.Album>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Photo to Albums</h2>

<p>
    <div class="row">
        <div class="col-md-3 ">
            <button type="submit" class="btn btn-primary btn-block"><a class="text-white" asp-area="" asp-controller="Photos" asp-action="Index">Back to Photos</a></button>
        </div>
    </div>
</p>
<p>
    <div class="row">
        <div class="col-md-3">
            <button type="submit" class="btn btn-primary btn-block"><a class="text-white" asp-action="Create">Create New</a></button>

        </div>
    </div>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AlbumName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AlbumName.Name)
                </td>
                <td>
                    <dl class="row">
                        <dd class="col-sm-10">
                            <img src="@("~/image/"+item.Photo.ImageName)" asp-append-version="true" width="250px" height="250px" />
                        </dd>
                    </dl>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AlbumID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.AlbumID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.AlbumID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
