@model DigiMarketWebApp.Models.Album

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Move Photo to another Album</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AlbumID" />
            <div class="form-group">
                <label asp-for="AlbumNameId" class="control-label"></label>
                <select asp-for="AlbumNameId" class="form-control" asp-items="ViewBag.AlbumNameId"></select>
                <span asp-validation-for="AlbumNameId" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="PhotoID" class="control-label"></label>
                <select asp-for="PhotoID" class="form-control" asp-items="ViewBag.PhotoID"></select>
                <span asp-validation-for="PhotoID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
