@model DigiMarketWebApp.Models.Album

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete the photo from this album?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Album Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AlbumName.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Photo)
        </dt>
        <dd class="col-sm-10">
            <img src="@("~/image/"+Model.Photo.ImageName)" asp-append-version="true"  />
        </dd>
    </dl>

    <form asp-action="DeletePhoto">
        <input type="hidden" asp-for="AlbumID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="AlbumIndex">Back to List</a>
    </form>
</div>
