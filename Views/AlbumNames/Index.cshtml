@model IEnumerable<DigiMarketWebApp.Models.AlbumName>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Albums</h1>

<p>
    <div class="row">
        <div class="col-md-4 ">
            <button type="submit" class="btn btn-primary btn-block"><a class="text-white nav-link" asp-controller="SharedAlbums" asp-action="Shared">View Albums Shared With Me</a></button>
        </div>
    </div>
</p>
<p>
    <div class="row">
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary btn-block"><a class="text-white nav-link" asp-action="Create">Create New</a></button>

        </div>
    </div>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <h4>@Html.DisplayFor(modelItem => item.Name)</h4>
                </td>
                <td>
                    <div class="text-center">
                        <div class="row">
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-light btn-block"><a class="nav-link" asp-action="Edit" asp-route-id="@item.AlbumNameID">Edit</a></button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-light btn-block"><a class="nav-link" asp-route-id="@item.AlbumNameID" asp-area="" asp-controller="Albums" asp-action="AlbumIndex">View Album</a></button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-light btn-block"><a class="nav-link" asp-route-id="@item.AlbumNameID" asp-area="" asp-controller="SharedAlbums" asp-action="Index">Share Album</a></button>
                            </div>
                        </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <button type="submit" class="btn btn-light btn-block"><a class="nav-link" asp-action="Delete" asp-route-id="@item.AlbumNameID">Delete</a></button>
                                </div>
                            </div>
                        </div>
                    
                </td>
            </tr>
        }
    </tbody>
</table>
