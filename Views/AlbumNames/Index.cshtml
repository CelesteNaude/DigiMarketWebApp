@model IEnumerable<DigiMarketWebApp.Models.AlbumName>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-controller="SharedAlbums" asp-action="Shared">View Albums Shared With Me</a> |
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WebAppUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WebAppUser.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AlbumNameID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AlbumNameID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AlbumNameID">Delete</a> |
                <a class="nav-link" asp-route-id="@item.AlbumNameID" asp-area="" asp-controller="Albums" asp-action="AlbumIndex">View Album</a>
                <a class="nav-link" asp-route-id="@item.AlbumNameID" asp-area="" asp-controller="SharedAlbums" asp-action="Index">Share Album</a>
            </td>
        </tr>
}
    </tbody>
</table>
