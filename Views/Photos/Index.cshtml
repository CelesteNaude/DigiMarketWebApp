@model IEnumerable<DigiMarketWebApp.Models.Photo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>My Photos</h1>

<p>
    <div class="row">
        <div class="col-md-4 ">
            <button type="submit" class="btn btn-primary btn-block"><a class="text-white nav-link" asp-controller="UserAccesses" asp-action="Shared">View Photos Shared With Me</a></button>
        </div>
    </div>
</p>
<p>
    <div class="row">
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary btn-block"><a class="text-white nav-link" asp-action="Create">Add New Photo</a></button>
            
        </div>
    </div>
</p>

<table class="table">
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <div class="row align-content-center">
                    <div class="col-md-10">
                        <h4>@Html.DisplayFor(modelItem => item.Title)</h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-10">
                        <a asp-action="Details" asp-route-id="@item.PhotoID">Details</a>
                    </div>
                </div>
            </td>
            <td></td>
        </tr>
            <tr>
                <td>
                    <dl class="row">
                        <dd class="col-md-10">
                            <img src="@("~/image/"+item.ImageName)" asp-append-version="true" />
                        </dd>
                    </dl>
                </td>
                <td>
                    <div class="text-center">
                        <div class="row">
                            <div class="col-md-10">
                                <button type="submit" class="btn btn-light btn-block"><a class="nav-link" asp-route-id="@item.PhotoID" asp-area="" asp-controller="Metadatas" asp-action="Index">More Information</a></button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-10">
                                <button type="submit" class="btn btn-light btn-block"><a class="nav-link" asp-route-id="@item.PhotoID" asp-area="" asp-controller="UserAccesses" asp-action="Index">Share Photo</a></button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-10">
                                <button type="submit" class="btn btn-light btn-block"><a class="nav-link" asp-route-id="@item.PhotoID" asp-area="" asp-controller="Albums" asp-action="Index">Add Photo to Album</a></button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-10">
                                <button type="submit" class="btn btn-light btn-block"><a class="nav-link" asp-action="DownloadImage" asp-route-id="@item.ImageName">Download Photo</a></button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-10">
                                <button type="submit" class="btn btn-light btn-block"><a class="nav-link" asp-action="Delete" asp-route-id="@item.PhotoID">Delete Photo</a></button>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
